#! /usr/bin/env sh

# Each argument in a new line, facilitate piping glob expanions to xargs:
# eachln * | xargs -n1 -p2 -I{} sh -c 'cd {} && touch {}.txt'

_sep="\n"

if [ "$1" = -- ]; then
	_escaped=1
	shift
fi

if [ "$1" = -0 ] && [ -z "$_escaped" ]; then
	_sep="\0"
	shift
fi

if [ $# -gt 0 ]; then
	printf "%s" "$1"
	shift
fi

while [ $# -gt 0 ]; do
	printf "$_sep%s" "$1"
	shift
done

